<!DOCTYPE html>
<html>

    <head>
        <link rel="stylesheet" href="/css/homepagestyle.css">
        <link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400&display=swap" rel="stylesheet" type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
        <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
    </head>
 
    <body>
        <header>
            <h1 class="headertext">Clement To Do App</h1>
            <nav>
                <div class="row headerrow">
                    <ul class="main-nav">
                        <li><a href="/about"> About</a></li>
                        <li><a id="logout-btn"href="/">Logout</a></li>
                        <li><a class="sign-up-button" href="#sign-up">Profile</a></li>
                        <li><a href="#"><ion-icon name="logo-github"></ion-icon></a></li>
                    </ul>
                </div>

            </nav>
        </header>



        <section class="homepage">
            <div class="left-side">
                    <!-- Trigger/Open The Modal -->
                <button id="myBtn" class="AddTaskbtn">Add Task</button>
                <div class="delete-task-form">
                    <form id="delete_form" autocomplete="off">
                    <div class="autocomplete">
                        <input id="myInput" type="text" name="id" placeholder="Search Task">
                    </div>
                    <input id="delete-submit" type="submit" value="Delete" class="delete-submit">
                </form>
                </div>
                
                <!-- The Modal -->
                <div id="AddModal" class="modal">
                    <!-- Modal content -->
                    <div class="modal-content">
                        <span class="close">&times;</span>
                        <form class="form-style-8" action="/tasks/create?authorization={{token}}" method="POST">
                            <input placeholder="Task Description" class="description" name="description" type="text" required>
                            <select placeholder="Category" class="category" name="category" type="text">
                                    <option value="" disabled selected class="form-dropdown-default-value">Select Category</option>
                                    <option value="School">School</option>
                                    <option value="Work">Work</option>
                                    <option value="Personal Life">Personal Life</option>
                                    <option value="Event">Event</option>
                                    <option value="Other">Other</option>
                            </select>
                            <input placeholder="Day of Month (Number)" class="date" name="date" type="number" min="1" max="31" required>
                            <select placeholder="Start Time" class="start" name="start" type="number" min="0" max="24" required>
                                <option value="" disabled selected class="form-dropdown-default-value">Start Time</option>
                                <option value="6">6:00 am</option>
                                <option value="7">7:00 am</option>
                                <option value="8">8:00 am</option>
                                <option value="9">9:00 am</option>
                                <option value="10">10:00 am</option>
                                <option value="11">11:00 am</option>
                                <option value="12">12:00 pm</option>
                                <option value="13">1:00 pm</option>
                                <option value="14">2:00 pm</option>
                                <option value="15">3:00 pm</option>
                                <option value="16">4:00 pm</option>
                                <option value="17">5:00 pm</option>
                                <option value="18">6:00 pm</option>
                                <option value="19">7:00 pm</option>
                                <option value="20">8:00 pm</option>
                                <option value="21">9:00 pm</option>
                                <option value="22">10:00 pm</option>
                            </select>
                            <select placeholder="End Time" class="end" name="end" type="number">
                                <option value="" disabled selected class="form-dropdown-default-value">End Time</option>
                                <option value="6">6:00 am</option>
                                <option value="7">7:00 am</option>
                                <option value="8">8:00 am</option>
                                <option value="9">9:00 am</option>
                                <option value="10">10:00 am</option>
                                <option value="11">11:00 am</option>
                                <option value="12">12:00 pm</option>
                                <option value="13">1:00 pm</option>
                                <option value="14">2:00 pm</option>
                                <option value="15">3:00 pm</option>
                                <option value="16">4:00 pm</option>
                                <option value="17">5:00 pm</option>
                                <option value="18">6:00 pm</option>
                                <option value="19">7:00 pm</option>
                                <option value="20">8:00 pm</option>
                                <option value="21">9:00 pm</option>
                                <option value="22">10:00 pm</option>
                            </select>
                            <input class="ModalSubmit" type="submit">
                        </form>
                    </div>
                </div>

                <!-- The Recent Tasks Category -->
                <div id = "recent-tasks" class="recent-tasks">
                    <h3>Today's Tasks</h3>
                    <div class="row legend">
                        <p>Complete:</p>
                        <div class="color-box-1">
                        </div>
                        <br>
                        <p>Incomplete:</p>
                        <div class="color-box-2">
                        </div>
                    </div>
                    <p class="instructions">Click to Complete!</p>
                </div>
            </div>
            

            <!-- THE CALENDAR -->
            <div class="container">
                <div class="row">
                    <h2 id="cal-date" class="today-date"></h2>
                    <h3 class="days-of-week">
                        <p class="first-day-of-week">Sun  </p>
                        <p>Mon</p>
                        <p>Tue</p>
                        <p class="middle-of-week">Wed</p>
                        <p>Thu</p>
                        <p>Fri</p>
                        <p>Sat</p>
                    </h3>
                </div>
                
                <div id="calendar">
                </div>

            </div>

        </section>

        <div>
            <p id="datastorage">{{tasks}}</p>
            <p id="tokenstorage">{{token}}</p>
        </div>

        <p>Created by Philip Clement</p>
        <script src="/js/clientside.js"></script>

    </body>


</html>